<div class="sidebar">
    <button class="sidebar-close" type="button" onclick="openMenu()"><span class="visually-hidden">Закрыть</span></button>
    <a href="/" class="sidebar-logo">
        <img src=@Url.Content("~/img/logo.jpg") width="100" height="100" alt="Логотип">
    </a>
    <nav class="main-nav">
        <div class="menu-list main-menu-list">
            @if (ViewBag.Role == "1")
            {<partial name="MainMenu/_MainMenu_Student" />}
            else { 
        <partial name="MainMenu/_MainMenu_WithoutRole" />}

        </div>
        
    </nav>
    
</div>
@{
    string SetMenuClassAndActive(string menuLinkClassName)
    {
        if ((string)ViewData["ActiveMenuLink"] == menuLinkClassName)
            return $"{menuLinkClassName} active";
        else
            return menuLinkClassName;
    }
}


