<div class="sidebar">
    <button class="sidebar-close" type="button"><span class="visually-hidden">Закрыть</span></button>
    <a href="/" class="sidebar-logo">
        <img src=@Url.Content("~/img/logo.png") width="210" height="58" alt="Логотип">
    </a>
    <nav class="main-nav">
        <div class="menu-list main-menu-list">
            <partial name="MainMenu/_MainMenu_WithoutRole" />
        </div>
    </nav>
    <ul class="menu-list bottom-menu-list">
        <li class="menu-item">
            <a class="menu-link @SetMenuClassAndActive("menu-link-contacts")" asp-area="" asp-controller="Contacts" asp-action="Index">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24.001" viewBox="0 0 24 24.001"><path class="a" d="M15.545,0h-.96C6.605.327,2.417,9.77,6.857,15.9a12.13,12.13,0,0,0,.909,1.063L14.179,23.6a1.179,1.179,0,0,0,1.767,0l6.412-6.637a8.693,8.693,0,0,0,.909-1.063C27.712,9.77,23.52.327,15.545,0Zm-.48,12.624a2.6,2.6,0,1,1,2.6-2.6A2.6,2.6,0,0,1,15.064,12.624Z" transform="translate(-3.062)" /><rect class="b" width="24" height="24" /></svg>
                Контакты
            </a>
        </li>
    </ul>
</div>
@{
    string SetMenuClassAndActive(string menuLinkClassName)
    {
        if ((string)ViewData["ActiveMenuLink"] == menuLinkClassName)
            return $"{menuLinkClassName} active";
        else
            return menuLinkClassName;
    }
}


